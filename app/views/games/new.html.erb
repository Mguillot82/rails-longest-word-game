<div class="container">
  <h1>Welcome to the longest word-game!</h1>
  <h2>Here is your grid:
    <hr>
  </h2>
  <div class="card">
    <ul>
      <% @letters.each do |letter| %>
        <li class="card-letter"><%= letter %></li>
      <% end %>
    </ul>
  </div>
  <h2>What is the longest word you can find?</h2>
  <form action="score" method="POST" data-turbo="false">
    <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
    <%= hidden_field_tag :letters, @letters %>
    <%= hidden_field_tag :start_time, @start_time %>
    <input id="user-guess" type="text" name="userGuess">
    <input id="btn-play" type="submit" value="Play">
  </form>
</div>
